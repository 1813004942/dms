	<mx:VBox width="100%" horizontalAlign="left">
		<mx:HBox width="50%" verticalAlign="middle">
			<mx:Label width="30%" minWidth="120" text="文件ID：" textAlign="right" id="t1"/>
			<mx:TextInput  width="60%" minWidth="170" editable="{writeable}"
						  text="{fileInfoBo.fileId}"/>
			<mx:Label width="10%" text="*" color="red" fontWeight="bold" textAlign="left" />
		</mx:HBox>
		<mx:HBox width="50%" verticalAlign="middle">
			<mx:Label width="30%" minWidth="120" text="文件名称：" textAlign="right"/>
			<mx:TextInput  width="60%" minWidth="170" editable="{writeable}"
						  text="{fileInfoBo.fileName}"/>
			<mx:Label width="10%" text="*" color="red" fontWeight="bold" textAlign="left"/>
		</mx:HBox>
		<mx:HBox width="50%" verticalAlign="middle">
			<mx:Label width="30%" minWidth="120" text="上传人" textAlign="right"/>
			<mx:TextInput  width="60%" minWidth="170" editable="{writeable}"
						   text="{fileInfoBo.userName}"/>
			<mx:Label width="10%" text="*" color="red" fontWeight="bold" textAlign="left"/>
		</mx:HBox>
		<mx:HBox width="50%" verticalAlign="middle">
			<mx:Label width="30%" minWidth="120" text="分类路径：" textAlign="right"/>
			<mx:TextInput  width="60%" minWidth="170" editable="{writeable}"
						   text="{fileInfoBo.categoryPath}"/>
			<mx:Label width="10%" text="*" color="red" fontWeight="bold" textAlign="left"/>
		</mx:HBox>
		<mx:HBox width="50%" verticalAlign="middle">
			<mx:Label width="30%" minWidth="120" text="上传时间：" textAlign="right"/>
			<mx:TextInput  width="60%" minWidth="170" editable="{writeable}"
						   text="{fileInfoBo.uploadTime}"/>
			<mx:Label width="10%" text="*" color="red" fontWeight="bold" textAlign="left"/>
		</mx:HBox>
		<mx:HBox width="50%" verticalAlign="middle">
			<mx:Label width="30%" minWidth="120" text="关键词：" textAlign="right"/>
			<mx:TextInput  width="60%" minWidth="170" editable="{writeable}"
						   text="{fileInfoBo.keywords}"/>
			<mx:Label width="10%" text="*" color="red" fontWeight="bold" textAlign="left"/>
		</mx:HBox>
		<mx:HBox width="50%" verticalAlign="middle">
			<mx:Label width="30%" minWidth="120" text="文件路径：" textAlign="right"/>
			<mx:TextInput  width="60%" minWidth="170" editable="{writeable}"
						   text="{fileInfoBo.filePath}"/>
			<mx:Label width="10%" text="*" color="red" fontWeight="bold" textAlign="left"/>
		</mx:HBox>
		<mx:HBox width="50%" verticalAlign="middle">
			<mx:Label width="30%" minWidth="120" text="文件详述：" textAlign="right"/>
			<mx:TextArea  width="60%" minWidth="170" editable="{writeable}"
						   text="{fileInfoBo.fileDesc}"/>
			<mx:Label width="10%" text="*" color="red" fontWeight="bold" textAlign="left"/>
		</mx:HBox>
		<mx:HBox width="50%" verticalAlign="middle">
			<mx:Label width="30%" minWidth="120" text="文件全名：" textAlign="right"/>
			<mx:TextArea  width="60%" minWidth="170" editable="{writeable}"
						   text="{fileInfoBo.fullName}"/>
			<mx:Label width="10%" text="*" color="red" fontWeight="bold" textAlign="left"/>
		</mx:HBox>
	</mx:VBox>
	
	<mx:ControlBar width="100%" height="30" horizontalAlign="center" verticalAlign="middle"> 
